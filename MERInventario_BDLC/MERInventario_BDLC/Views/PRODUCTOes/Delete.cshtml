@model MERInventario_BDLC.Models.PRODUCTO

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar Producro</h2>

<div>
	<hr />
	<h4>¿Estás seguro de eliminar este ítem?</h4>
	<br />
	<dl class="dl-horizontal">
		<dt>
			Descripción:
		</dt>

		<dd>
			@Html.DisplayFor(model => model.PROD_DESCRIPCION)
		</dd>

		<dt>
			Cantidad:
		</dt>

		<dd>
			@Html.DisplayFor(model => model.PROD_CANTIDAD)
		</dd>

		<dt>
		Precio Unitario ($):
		</dt>

		<dd>
			@Html.DisplayFor(model => model.PROD_PRECIO_UNI)
		</dd>

		<dt>
		Largo (cm):
		</dt>

		<dd>
			@Html.DisplayFor(model => model.PROD_LARGO)
		</dd>

		<dt>
			Ancho (cm):
		</dt>

		<dd>
			@Html.DisplayFor(model => model.PROD_ANCHO)
		</dd>

		<dt>
			Profundidad (cm):
		</dt>

		<dd>
			@Html.DisplayFor(model => model.PROD_PROFUNDIDAD)
		</dd>

		<dt>
			Categoría:
		</dt>

		<dd>
			@Html.DisplayFor(model => model.CATEGORIA.CAT_NOMBRE)
		</dd>

		<dt>
			Marca:
		</dt>

		<dd>
			@Html.DisplayFor(model => model.MARCA.MAR_NOMBRE)
		</dd>

		<dt>
			Proveedor:
		</dt>

		<dd>
			@Html.DisplayFor(model => model.PROVEEDOR.PROV_NOMBRE)
		</dd>

	</dl>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-actions no-color">
			<input type="submit" value="Confirmar" class="btn btn-danger" /> |
			@Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-warning btn-large" })
		</div>
	}
</div>
